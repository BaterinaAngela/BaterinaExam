<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">


        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/website" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="0"
        android:weightSum="1"
        android:background="#050A30">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Colegio de San Juan de Letran Calamba"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- CREATE ACCOUNT -"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#050A30"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/editSignupLastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10sp"
            android:padding="10dp"
            android:hint="Lastname"
            android:textColorHint="#050A30"
            android:textColor="#050A30"
            android:textAlignment="center"
            android:background="@drawable/round_edittext"/>

        <EditText
            android:id="@+id/editSignupFirstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:hint="Firstname"
            android:textColorHint="#050A30"
            android:textColor="#050A30"
            android:textAlignment="center"
            android:background="@drawable/round_edittext"/>

        <EditText
            android:id="@+id/editSignupEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:hint="Email"
            android:textColorHint="#050A30"
            android:textColor="#050A30"
            android:textAlignment="center"
            android:background="@drawable/round_edittext"/>

        <EditText
            android:id="@+id/editSignupPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:hint="Password"
            android:textColorHint="#050A30"
            android:textColor="#050A30"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:background="@drawable/round_edittext"/>

        <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:background="@drawable/round_button"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="10sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>